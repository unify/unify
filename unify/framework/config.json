{
  "name"    : "unify",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "lint",
    "migration",
    "pretty",
    "source",
    "test",
    "test-source"
  ],
  
  "let" :
  {
    "APPLICATION"  : "unify",
    "API_EXCLUDE"  : [ "qx.test.*", "unify.test.*" ],
    "QOOXDOO_PATH" : "../../qooxdoo",
    "CACHE"        : "cache",
    "ROOT"         : "."
  }
}
